@model MemberDemoApp.Models.LoginModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/shared/_LayoutLoginPage.cshtml";

}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="limiter">
        <div class="container-login100" style="background-image: url('../../Content/images/bg-01.jpg');
    ">
            <div class="wrap-login100 p-t-30 p-b-50">
                <span class="login100-form-title p-b-41">
                    Account Login
                </span>
                <form class="login100-form validate-form p-b-33 p-t-5">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="wrap-input100 validate-input" data-validate="Enter username">
                        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "input100 middle" } })
                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger middle" })

                        <span class="focus-input100" data-placeholder="&#xe82a;"></span>
                    </div>



                    <div class="wrap-input100 validate-input" data-validate="Enter password">
                        @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "input100 middle" } })
                        @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger middle" })
                        <span class="focus-input100" data-placeholder="&#xe80f;"></span>
                    </div>



                    <div class="container-login100-form-btn m-t-32">
                        <button class="login100-form-btn" type="submit">
                            Login
                        </button> &nbsp;
                        @*<a href='@Url.Action("RegisterUser", "Account")' class="login100-form-btn">Register user!</a>*@
                    </div>

                </form>
            </div>
        </div>
    </div>


    <div id="dropDownSelect1"></div>

}



