@using System.Web.Optimization;
<!DOCTYPE html>
<html>
<head>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Styles.Render("~/Content/css");
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/all.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body  style =" background-image: linear-gradient(to right,#43cea2,#185a9d)">
  >
    <div class="navbar navbar-inverse navbar-fixed-top alert-info" style="height:50px; font-size:large; font-weight:bolder; font-style:italic;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Shop Online", "Login", "Account", new { area = "" }, new { @class = "navbar-brand styless" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right nav-item">
                    <li class="nav-item navbar-link"> <a href='@Url.Action("RegisterUser", "Account")'> Register</a></li> 
                    <li class="navbar-link"> <a href='@Url.Action("AboutUs", "Account")'>AboutUs </a></li> &nbsp;&nbsp;&nbsp;
                    <li class="navbar-link"> <a href='@Url.Action("AllUsers", "Account")'> Users</a></li>&nbsp;&nbsp;&nbsp;
                    <li class="navbar-link"> <a href='@Url.Action("Login", "Account")'> Logout</a> </li>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.5.1.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    style 
</body>
</html>